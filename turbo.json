{
    "$schema": "https://turborepo.com/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "globalEnv": [
        "PORT",
        "NODE_ENV",
        "VERCEL_ENV"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**"
            ],
            "env": [
                "NEXT_PUBLIC_*"
            ],
            "passThroughEnv": [
                "VERCEL_*",
                "NEXT_*"
            ]
        },
        "test": {
            "outputs": [
                "coverage/**"
            ],
            "dependsOn": []
        },
        "lint": {
            "dependsOn": [
                "^build"
            ]
        },
        "typecheck": {
            "dependsOn": [
                "^build"
            ]
        },
        "dev": {
            "dependsOn": [
                "^build"
            ],
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}