{
  "name": "create-shapeless-app",
  "version": "1.0.3",
  "description": "CLI tool to create a new shapeless application",
  "main": "dist/index.js",
  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "dist",
    "template",
    "package.json"
  ],
  "bin": {
    "create-shapeless-app": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "watch": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "clean": "rm -rf dist .turbo node_modules",
    "copy-base-template": "tsx scripts/copy-base-template.ts"
  },
  "keywords": [
    "shapeless",
    "shapelesss"
  ],
  "author": "Pherus",
  "license": "ISC",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "picocolors": "^1.1.1",
    "chalk": "^5.4.1",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "hono": "^4.8.9",
    "@shapelesss/core": "^1.0.0",
    "ora": "^8.2.0",
    "sort-package-json": "^3.4.0",
    "tsup": "^8.5.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.1.0",
    "boxen": "^8.0.1",
    "dotenv": "^17.2.1",
    "zod": "^4",
    "@planetscale/database": "^1.19.0",
    "@neondatabase/serverless": "^1.0.1",
    "@vercel/postgres": "^0.10.0",
    "drizzle-orm": "^0.44.3",
    "drizzle-kit": "^0.31.4",
    "postgres": "^3.4.7",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3"
  }
}